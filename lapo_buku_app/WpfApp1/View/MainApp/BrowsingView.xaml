<UserControl x:Class="WpfApp1.View.MainApp.BrowsingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.View.MainApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <!-- Row 1: Search Box -->
            <RowDefinition Height="Auto" />
            <!-- Row 2: Buttons (Filter & Sort) -->
            <RowDefinition Height="Auto" />
            <!-- Row 3: Grid of Cards -->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Margin="101,21,100,0" TextWrapping="Wrap" Text="Search..." VerticalAlignment="Top" Height="33" FontFamily="Arial" FontSize="16"
            VerticalContentAlignment="Center"
        />


    </Grid>
</UserControl>
